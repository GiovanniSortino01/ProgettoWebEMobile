<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/search_price_generalPrice"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="@string/search_generalPrice"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="34dp" />

    <LinearLayout
        android:id="@+id/search_linearPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_price_generalPrice"
        android:layout_width="320dp"
        android:layout_height="230dp"
        android:layout_margin="30dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="368dp">

        <TextView
            android:id="@+id/search_price_price1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/search_price1"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/search_price_price2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/search_price2"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/search_price_price3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/search_price3"
            android:textSize="30sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>