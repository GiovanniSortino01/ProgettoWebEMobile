<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principale.search.RecyclerView.Place.Menu.MenuFragment"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/menu_testo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_menu"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/menu_btnAntipasti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/menu_btnAntipasti"
                    android:layout_marginRight="15dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/button"/>

                <Button
                    android:id="@+id/menu_btnPrimi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/menu_btnPrimi"
                    android:layout_marginRight="15dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/button"/>

                <Button
                    android:id="@+id/menu_btnSecondi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/menu_btnSecondi"
                    android:layout_marginRight="15dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/button"/>

                <Button
                    android:id="@+id/menu_btnDolci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/menu_btnDolci"
                    android:layout_marginRight="15dp"
                    android:textSize="20sp"
                    android:backgroundTint="@color/button"/>

                <Button
                    android:id="@+id/menu_btnBevande"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/menu_btnBevande"
                    android:textSize="20sp"
                    android:backgroundTint="@color/button"/>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>