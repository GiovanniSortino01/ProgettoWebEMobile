<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="23dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_edit_generalTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="@string/user_generalEdit"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_edit_generalText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="@string/user_generalEditText"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/user_edit_newEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/user_email"
            android:inputType="textEmailAddress|textWebEmailAddress"
            android:autofillHints="Email"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/user_edit_newPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/user_password"
            android:inputType="textVisiblePassword"
            android:autofillHints="Password"
            android:paddingBottom="8dp" />

    </LinearLayout>

    <Button
        android:id="@+id/user_edit_btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/buttonChange"
        android:gravity="center"
        android:textSize="17sp"
        android:text="@string/user_edit_btnChange"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toEndOf="@+id/user_edit_btnChange" />

    <Button
        android:id="@+id/user_edit_btnChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_weight="1"
        android:textSize="17sp"
        android:textStyle="bold"
        android:backgroundTint="@color/buttonBack"
        android:gravity="center"
        android:text="@string/user_edit_btnClose"
        app:layout_constraintBottom_toBottomOf="@+id/user_edit_btnClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_edit_btnClose"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
