<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principale.SearchFragment">

    <Button
        android:id="@+id/search_btnPeople"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_margin="30dp"
        android:backgroundTint="@color/login_backgroundButton"
        android:text="@string/search_people"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839" />

    <Button
        android:id="@+id/search_btnRestaurant"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_margin="30dp"
        android:backgroundTint="@color/login_backgroundButton"
        android:text="@string/search_restaurant"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/search_btnHotel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/search_btnHotel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <Button
        android:id="@+id/search_btnHotel"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_margin="30dp"
        android:backgroundTint="@color/login_backgroundButton"
        android:text="@string/search_hotel"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/search_btnMonuments"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/search_btnMonuments"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351" />

    <Button
        android:id="@+id/search_btnMonuments"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_margin="30dp"
        android:backgroundTint="@color/login_backgroundButton"
        android:text="@string/search_mounuments"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/search_btnPeople"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/search_btnPeople"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593" />

</androidx.constraintlayout.widget.ConstraintLayout>